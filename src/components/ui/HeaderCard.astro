---
import { cn } from "@/lib/utils";

interface Props {
  title: string;
  description?: string;
  class?: string;
}
const { title, description, class: className, ...props } = Astro.props;
---

<div
  data-slot="card"
  class={cn(
    "-rotate-1 rounded-base inline-flex items-center justify-center whitespace-nowrap shadow-shadow border-2 gap-6 px-8 py-6 border-border bg-main text-foreground font-base",
    className,
  )}
  {...props}>
  <div class="flex flex-col">
    <div>
      <h1 class="text-3xl">{title}</h1>
    </div>
    <div>
      {description && <h2 class="text-sm">{description}</h2>}
    </div>
  </div>
  <slot />
</div>
